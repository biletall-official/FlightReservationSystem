@{
    ViewData["Title"] = "Uçak Arama";
}

<div class="container">
    <div class="search-box">
        <div class="box-item">
            <label for="nereden">Nereden</label>
            <input type="text" id="nereden" placeholder="İstanbul">
        </div>
        <div class="box-item">
            <label for="nereye">Nereye</label>
            <input type="text" id="nereye" placeholder="İzmir">
        </div>
        <div class="box-item">
            <label for="gidis-tarihi">Gidiş Tarihi</label>
            <input type="date" id="gidis-tarihi">
        </div>
        <div class="box-item">
            <label for="yolcu-sayisi">Yolcu Sayısı</label>
            <input type="number" id="yolcu-sayisi" value="1" min="1">
        </div>
        <div class="box-item">
            <button type="button" class="search-button">Uçuş Ara</button>
        </div>
    </div>
</div>

<div class="additional-content">
    <h2>Ek Bilgiler</h2>
    <p>Bu bölümde uçak arama işlemleriyle ilgili ek bilgiler sunulabilir.</p>
</div>